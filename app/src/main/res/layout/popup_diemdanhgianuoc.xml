<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_title_popup"
            android:text="@string/title_layer"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/imgbtn_popup_diem_danh_gia_nuoc_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_small"
            android:background="@color/colorWhite"
            android:src="@drawable/ic_cancel" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_field_name">
        <!--ID sự cố-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/width_title_item_docso"
                android:layout_height="wrap_content"
                android:text="Mã: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_id_su_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!--vị trí sự cố-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/width_title_item_docso"
                android:layout_height="wrap_content"
                android:text="Vị trí: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_vi_tri_su_co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBtn_viewtablethoigian"
            android:layout_width="@dimen/size_image"
            android:layout_height="@dimen/size_image"
            android:background="@android:color/white"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_table"
            android:tint="@color/colorPrimary"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/imgBtn_ViewMoreInfo"
            android:layout_width="@dimen/size_image"
            android:layout_height="@dimen/size_image"
            android:background="@android:color/white"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_info"
            android:tint="@color/colorPrimary"
            android:visibility="gone" />
        <ImageButton
            android:id="@+id/imgBtn_Attachment"
            android:layout_width="@dimen/size_image"
            android:layout_height="@dimen/size_image"
            android:background="@android:color/white"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_attachment"
            android:tint="@color/colorPrimary"
            />

        <ImageButton
            android:id="@+id/imgBtn_delete"
            android:layout_width="@dimen/size_image"
            android:layout_height="@dimen/size_image"
            android:background="@android:color/white"
            android:paddingRight="@dimen/padding_title_popup"
            android:src="@drawable/ic_delete"
            android:tint="@android:color/holo_red_dark"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>